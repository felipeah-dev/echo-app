# ==============================================
# ECHO - Environment Variables (EXAMPLE)
# 
# ==============================================

# ----- Slack Integration -----
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL_ID=your_slack_channel_id_here

# ----- Google Sheets & Calendar -----
# Service Account JSON (base64 encoded o el JSON directo)
GOOGLE_SA_JSON=your_google_service_account_json_here
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_CALENDAR_ID=your_google_calendar_id_here

# ----- Email (SMTP) -----
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_email_here
SMTP_PASS=your_email_app_password_here
EMAIL_FROM="Echo Demo <your_email_here>"

# ----- Feature flags -----
FEATURE_USE_REAL_GOOGLE=true
FEATURE_USE_REAL_SLACK=true
FEATURE_USE_REAL_GMAIL=true
FEATURE_SEEDED_LIVE_METRICS=true
FEATURE_PREDICTIVE_ALERT=true
FEATURE_USE_REAL_ORCHESTRATE=true

# ----- App config -----
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_APP_NAME=Echo
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----- watsonx Orchestrate - IBM Cloud API -----
WZ_INSTANCE_URL=your_watsonx_instance_url_here
WZ_IAM_API_KEY=your_watsonx_api_key_here
WZ_AGENT_ID=your_watsonx_agent_id_here
