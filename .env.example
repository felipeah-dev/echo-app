# ==============================================
# ECHO - Environment Variables
# ==============================================

# ----- IBM watsonx Orchestrate -----
WZ_API_BASE=https://api.orchestrate.ibm.com
WZ_API_KEY=your_watsonx_api_key_here
WZ_PROJECT_ID=your_project_id_here

# ----- Slack Integration -----
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0XXXXXXXXX
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ----- Google Sheets & Calendar -----
# Service Account JSON (base64 encoded or file path)
GOOGLE_SA_JSON=path/to/service-account.json
# OR inline:
# GOOGLE_SA_JSON='{"type":"service_account","project_id":"..."}'
GOOGLE_SHEET_ID=your_spreadsheet_id_here
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# ----- Email (SMTP) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=Echo Bot <noreply@echo-demo.com>

# ----- Feature Flags -----
FEATURE_PREDICTIVE_ALERT=true
FEATURE_SEEDED_LIVE_METRICS=true
FEATURE_USE_REAL_GMAIL=true
FEATURE_USE_REAL_ORCHESTRATE=true

# ----- Demo Mode -----
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_WS_URL=http://localhost:3000

# ----- Logging & Monitoring -----
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ----- App Configuration -----
NEXT_PUBLIC_APP_NAME=Echo
NEXT_PUBLIC_APP_URL=http://localhost:3000
